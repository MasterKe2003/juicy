{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "esnext"
    ],
    "target": "esnext",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": false,
    "declaration": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveConstEnums": true
  },
  "include": [
    "api/**/*"
  ],
  "exclude": [
    "dist"
  ]
}
