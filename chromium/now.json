{
    "version": 2,
    "builds": [
        { "src": "lambda/screenshot.js", "use": "@now/node", "config": { "maxLambdaSize": "40mb" } },
        { "src": "lambda/pdf.js", "use": "@now/node", "config": { "maxLambdaSize": "40mb" } }
    ],
    "routes": [
        { "src": "/screenshot/", "dest": "/lambda/screenshot.js" },
        { "src": "/pdf/", "dest": "/lambda/pdf.js" }
    ]
}